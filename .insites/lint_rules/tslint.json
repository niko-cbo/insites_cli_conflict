{
    "defaultSeverity": "error",
    "rules": {
        "max-file-line-count": [
            true,
            100
        ],
        "max-classes-per-file": [
            true,
            1,
            "exclude-class-expressions"
        ],
        "class-name": true,
        "no-any": true,
        "no-var-requires": true,
        "only-arrow-functions": true,
        "prefer-for-of": true,
        "promise-function-async": [
            true,
            "check-arrow-function"
        ],
        "typedef": true,
        "await-promise": true,
        "curly": [
            true,
            "ignore-same-line"
        ],
        "no-console": [
            true,
            "log",
            "error"
        ],
        "no-debugger": true,
        "no-construct": true,
        "no-duplicate-switch-case": true,
        "no-duplicate-variable": [
            true,
            "check-parameters"
        ],
        "no-empty": [
            true,
            "allow-empty-catch",
            "allow-empty-functions"
        ],
        "no-eval": true,
        "no-floating-promises": true,
        "no-invalid-template-strings": true,
        "no-invalid-this": true,
        "no-return-await": true,
        "no-unused-expression": true,
        "no-unused-variable": [
            true,
            "check-parameters"
        ],
        "no-var-keyword": true,
        "triple-equals": true,
        "indent": [
            true,
            "spaces",
            4
        ],
        "prefer-const": true,
        "jsdoc-format": [
            true,
            "check-multiline-start"
        ]
    }
}